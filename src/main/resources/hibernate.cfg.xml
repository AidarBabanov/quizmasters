<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.url">jdbc:mysql://localhost:3306/quizmasters</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
      <mapping class="kz.codemasters.quizmasters.model.User"/>
      <mapping class="DAO.AnswerMultChoiceEntity"/>
      <mapping class="DAO.PropertyTimeToAnswerEntity"/>
      <mapping class="DAO.QuestionEntity"/>
      <mapping class="DAO.QuestionTypeEntity"/>
      <mapping class="DAO.QuizEntity"/>
      <mapping class="DAO.QuizPropertyEntity"/>
      <mapping class="DAO.QuizPropertyTypeEntity"/>
      <mapping class="DAO.UserEntity"/>
      <!-- <property name="connection.username"/> -->
    <!-- <property name="connection.password"/> -->

    <!-- DB schema will be updated if needed -->
    <!-- <property name="hbm2ddl.auto">update</property> -->
  </session-factory>
</hibernate-configuration>